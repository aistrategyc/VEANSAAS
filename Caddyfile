# üåê Caddy Configuration for Production
# –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–µ SSL —Å–µ—Ä—Ç–∏—Ñ–∏–∫–∞—Ç—ã –æ—Ç Let's Encrypt

# Main application - Web Enterprise
planerix.com, www.planerix.com {
    # API routes
    handle /api/* {
        reverse_proxy api:8001
    }
    
    # Static files and frontend
    handle {
        reverse_proxy web:3000
    }

    # Logging
    log {
        output file /var/log/caddy/planerix.access.log {
            roll_size 100mb
            roll_keep 5
        }
    }

    # Security headers
    header {
        X-Frame-Options DENY
        X-Content-Type-Options nosniff
        X-XSS-Protection "1; mode=block"
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        -Server
    }

    # Rate limiting
    rate_limit {
        zone dynamic {
            key {remote_host}
            events 100
            window 1m
        }
    }
}

# Landing page (–µ—Å–ª–∏ –Ω—É–∂–µ–Ω –æ—Ç–¥–µ–ª—å–Ω—ã–π –ø–æ–¥–¥–æ–º–µ–Ω)
landing.planerix.com {
    reverse_proxy landing:3000
    
    header {
        X-Frame-Options DENY
        X-Content-Type-Options nosniff
        -Server
    }
    
    log {
        output file /var/log/caddy/landing.access.log {
            roll_size 50mb
            roll_keep 3
        }
    }
}

# API subdomain (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ, –¥–ª—è –ø—Ä—è–º–æ–≥–æ –¥–æ—Å—Ç—É–ø–∞ –∫ API)
api.planerix.com {
    reverse_proxy api:8001
    
    header {
        X-Frame-Options DENY
        X-Content-Type-Options nosniff
        -Server
    }
}

# Health check endpoint
:8080 {
    respond /health "healthy" 200
}