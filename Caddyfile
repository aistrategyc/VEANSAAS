# üåê Caddy Configuration for Production
# –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–µ SSL —Å–µ—Ä—Ç–∏—Ñ–∏–∫–∞—Ç—ã –æ—Ç Let's Encrypt

# Landing page - –≥–ª–∞–≤–Ω–∞—è —Å—Ç—Ä–∞–Ω–∏—Ü–∞
liderix.ru, www.liderix.ru {
    reverse_proxy planerix-landing:3000
    
    # Security headers
    header {
        X-Frame-Options DENY
        X-Content-Type-Options nosniff
        X-XSS-Protection "1; mode=block"
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        -Server
    }
    
    # Logging
    log {
        output file /var/log/caddy/liderix.access.log {
            roll_size 100mb
            roll_keep 5
        }
    }
}

# Web Enterprise Application
app.liderix.ru {
    reverse_proxy liderix-web:3000
    
    header {
        X-Frame-Options DENY
        X-Content-Type-Options nosniff
        X-XSS-Protection "1; mode=block"
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        -Server
    }
    
    log {
        output file /var/log/caddy/app.access.log {
            roll_size 50mb
            roll_keep 3
        }
    }
}

# API subdomain
api.liderix.ru {
    reverse_proxy liderix-api:8001
    
    header {
        X-Frame-Options DENY
        X-Content-Type-Options nosniff
        -Server
    }
    
    log {
        output file /var/log/caddy/api.access.log {
            roll_size 50mb
            roll_keep 3
        }
    }
}

# Health check endpoint
:8080 {
    respond /health "healthy" 200
}