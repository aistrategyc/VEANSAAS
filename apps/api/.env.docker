# Docker Environment for VEANCRM API

# Database Configuration (используются настройки из postgres сервиса)
VEANCRM_DB_URL=postgresql+asyncpg://veancrm_user:veancrm_secure_password_2025@postgres:5432/veancrm_db
ITSTEP_DB_URL=postgresql+asyncpg://veancrm_user:veancrm_secure_password_2025@postgres:5432/veancrm_db

# Redis Configuration (используется внутренний DNS контейнера)
REDIS_URL=redis://redis:6379/0

# JWT Configuration
ACCESS_TOKEN_SECRET=veancrm_jwt_super_secret_key_2025_docker_env
JWT_ALGORITHM=HS256
JWT_AUDIENCE=veancrm-clients
JWT_ISSUER=veancrm

# API Configuration
PROJECT_NAME=VEANCRM API
PROJECT_VERSION=1.0.0
API_PREFIX=/api

# CORS Configuration
CORS_ALLOW_ORIGINS=http://localhost:3001,http://frontend:3000

# Server Configuration
HOST=0.0.0.0
PORT=8001

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
CLIENT_DB_POOL_SIZE=5
CLIENT_DB_MAX_OVERFLOW=10

# Development Settings
DEBUG=true
LOG_LEVEL=INFO